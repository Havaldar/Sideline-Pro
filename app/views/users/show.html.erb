<link href='http://fonts.googleapis.com/css?family=Slabo+27px' rel='stylesheet' type='text/css'>

<script type="text/javascript">
    $('#usertabs a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
    });
    $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
        e.target; // newly activated tab
        e.relatedTarget; // previous active tab
    });
</script>

<div id="wrapper">
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
        	<div class="username">
        		<%=@user.name%>
        	</div>	
            <%= image_tag @user.avatar.url(:medium), :class => "userpic" %>
			<div class="userinfo">
				<%= link_to 'Edit Profile', edit_user_registration_path %>
			</div>
            <table>
                <tr><td>Appearances</td><td><%=@user.statistics.length%></td></tr>
                <tr><td>Goals</td><td><%=@goals%></td></tr>
                <tr><td>Assists</td><td><%=@assists%></td></tr>
                <tr><td>Fouls</td><td><%=@fouls%></td></tr>
                <tr><td>Yellow Cards</td><td><%=@yellow_cards%></td></tr>
                <tr><td>Red Cards</td><td><%=@red_cards%></td></tr>
                <tr><td>Offsides</td><td><%=@offsides%></td></tr>
                <tr><td>Shots</td><td><%=@shots%></td></tr>
                <tr><td>Shots on Goal</td><td><%=@shots_on_target%></td></tr>
            </table>
        </ul>
    </div>
    <div class ="verticalLine">
    </div>
    <div id="page-content-wrapper">
        <div class="page-content">
            <div class="container">
                <ul class="nav nav-tabs" role="tablist" id="usertabs">
                    <li role="presentation" class="active"><a href="#tab-1" aria-controls="tab-1" role="tab" data-toggle="tab">Your Teams</a></li>
                    <li role="presentation"><a href="#tab-2" aria-controls="tab-2" role="tab" data-toggle="tab">Your Games</a></li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="tab-1">
                        <div class="row">
                            <div class="col-md-12">
                               <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" id="createteam">
          						Create A New Team
        						</button>
        						<div class="collapse" id="collapseExample">
        						  <div class="well">
        						    <%= render :partial => '/layouts/team_form', :locals => {:team => @team} %>
        						  </div>
        						</div>
        						<%@user.teams.each do |team|%>
        							<div class="well" id="teams">
        							<%= link_to team.name, team %>
        							</div>
        						<%end%>
                            </div>
                        </div>
                    </div>    
                    <div role="tabpanel" class="tab-pane fade" id="tab-2">
                        <div class="row">
                            <div class="col-md-12">
                                <%@games.each do |game|%>
                                    <div class="well" id="teams">
                                    <%= link_to game.name, game %>
                                    </div>
                                <%end%>
                            </div>
                        </div>    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="collapse" id="collapseExample">
  <div class="well">
    <%= render :partial => '/layouts/team_form', :locals => {:team => @team} %>
  </div>
</div>


