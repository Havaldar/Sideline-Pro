<link href='http://fonts.googleapis.com/css?family=Slabo+27px' rel='stylesheet' type='text/css'>

<div id="wrapper">
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
        	<div class="username">
        		<%=@user.name%>
        	</div>	
            <%= image_tag @user.avatar.url(:medium), :class => "userpic" %>
			<div class="userinfo">
				<%= link_to 'Edit Profile', edit_user_registration_path %>
			</div>
        </ul>
    </div>
    <div class ="verticalLine">
    </div>
    <div id="page-content-wrapper">
        <div class="page-content">
            <div class="container">
                <div id="tabs">
                    <ul class="nav nav-tabs" id="usertabs">
                        <li role="presentation" class="active"><a href="#tab-1">Your Teams</a></li>
                        <li role="presentation"><a href="#tab-2">Your Games</a></li>
                    </ul>
                  
                    <div id="tab-1">
                        <div class="row">
                            <div class="col-md-12">
                               <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          						Create A New Team
        						</button>
        						<div class="collapse" id="collapseExample">
        						  <div class="well">
        						    <%= render :partial => '/layouts/team_form', :locals => {:team => @team} %>
        						  </div>
        						</div>
        						<%@user_teams.each do |team|%>
        							<div class="well" id="teams">
        							<%= link_to team.name, team %>
        							</div>
        						<%end%>
                            </div>
                        </div>
                    </div>    
                    <div id="tab-2">
                        <div class="row">
                            <div class="col-md-12">
                                <%@user_games.each do |game|%>
                                    <div class="well" id="games">
                                    <%= link_to game.name, game %>
                                    </div>
                                <%end%>
                            </div>
                        </div>    
                    </div>
                </div>  
            </div>
        </div>
    </div>
</div>
<div class="collapse" id="collapseExample">
  <div class="well">
    <%= render :partial => '/layouts/team_form', :locals => {:team => @team} %>
  </div>
</div>

<script type="text/javascript">
    $("#tabs").tabs();
</script>
