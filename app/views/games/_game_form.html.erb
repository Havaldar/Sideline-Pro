<%= form_for(game, {:url => "/games"}) do |f| %>
	<% %>
	<%= f.hidden_field :team1_id, :value => opponent_team%>
	<%= f.label :name %>:
	<%= f.text_field :name %>
	<br/>
	<%= f.label :your_team%>:
	<%= f.select(:team2_id, teams)%>
	<br/>
	<%= f.label :address %>:
	<%= f.text_field :address %>
	<br/>
	<%= f.label :date %>:
	<%= f.text_field :date, :class => "game_date_select" %>
	<br/>
	<%= f.submit %>
<% end %>
<script type="text/javascript">
	$('.game_date_select').datepicker();
</script>